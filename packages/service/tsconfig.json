{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "baseUrl": ".",
        "incremental": true,
        "paths": {
            "@/*": ["src/*"],
            "@modules/*": ["src/modules/*"],
            "@lib/*": ["src/dynamic_modules/*"],
            "@utils": ["src/utils"]
        }
    },
    "include": ["src/**/*", "typings"],
    "exclude": ["node_modules", "dist"]
}
